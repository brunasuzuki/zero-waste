<form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
</form>
<div class="background-home">
  <div class="cards-margim">
    <% @recipes.each do |recipe|%>
      <%= link_to recipe_path(recipe) do %>
        <div class="card-trip">
        <% if recipe.url_image.present? %>
          <%= image_tag(recipe.url_image) %>
        <% else %>
          <img src="https://spoonacular.com/recipeImages/73420-312x231.jpg", class="picture mt-3"/>
        <% end %>
          <div class="card-trip-infos">
            <div class="infos">
              <p><%= recipe.name%></p>
              <p><%= recipe.prep_time%></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
