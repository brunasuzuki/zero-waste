<div class="background-home">
  <div class="background-logo">
  </div>
  <div class="container-grid">
    <div class="text-center margin-home">
      <h5><strong>Welcome!</strong></h5>
    </div>
    <div class="container home-grid">
      <%= link_to root_path, class: "link-home" do %>
        <div class="home-card">
          <i class="fas fa-user icon-big"></i>
          <p class="mt-2">User</p>
        </div>
      <% end %>

      <%= link_to new_ingredient_pantry_path, class: "link-home" do %>
        <div class="home-card">
          <i class="fas fa-upload icon-big"></i>
          <p class="mt-2">Add new ingredient</p>
        </div>
      <% end %>

      <%= link_to root_path, class: "link-home" do %>
        <div class="home-card">
          <i class="fas fa-archive icon-big"></i>
          <p class="mt-2">Storage Recomendation</p>
        </div>
      <% end %>

      <%= link_to ingredient_pantries_path, class: "link-home" do %>
        <div class="home-card">
          <i class="fas fa-clipboard-list icon-big"></i>
          <p class="mt-2">Your food pantry</p>
        </div>
      <% end %>

      <%= link_to recipes_path, class: "link-home" do %>
        <div class="home-card">
          <i class="fas fa-book icon-big"></i>
          <p class="mt-2">Recipes</p>
        </div>
      <% end %>

      <%= link_to root_path, class: "link-home" do %>
        <div class="home-card">
          <i class="fas fa-list icon-big"></i>
          <p class="mt-2">Checklist</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
